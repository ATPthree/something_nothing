.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
}

.login-image {
  width: 100%;
  height: 200px; /* 根据需要调整高度 */
  border-radius: 8px;
  margin-bottom: 20px;
}

.form-item {
  display: flex;
  flex-direction: column;
  margin-bottom: 20px;
  width: 100%;
}

.form-item text {
  margin-bottom: 5px;
}

.form-item input {
  padding: 10px;
  border: 1px solid #ccc;
  border-radius: 4px;
}

button {
  background-color: #1aad19;
  color: white;
  border: none;
  border-radius: 4px;
  padding: 10px 20px;
  font-size: 16px;
  cursor: pointer;
  width: 100%;
}
button2 {
  background-color: #3a8ee6; /* 蓝色 */
  color: white;
  border: none;
  border-radius: 4px;
  padding: 10px 20px;
  font-size: 16px; /* 增加字体大小 */
  font-weight: bold; /* 使文字变粗 */
  cursor: pointer;
  width: 41%;
  margin-top: 10px;
  text-align: center; /* 文字居中 */
}

/* 设置登录按钮的样式 */
.login_bin {
  background-color: #1aad19; /* 蓝色背景 */
  color: white;              /* 白色文字 */
  width: 100%;               /* 按钮宽度为100% */
  padding: 12px;             /* 内边距 */
  border: none;              /* 去除边框 */
  font-size: 16px;           /* 字体大小 */
  margin-bottom: 5px;       /* 登录按钮和注册按钮之间的间隔 */
  border-radius: 5px;        /* 圆角按钮 */
}

/* 设置注册按钮的样式 */
.register_bin {
  background-color: #3a8ee6; /* 更深的蓝色背景 */
  color: white;               /* 白色文字 */
  width: 100%;                /* 按钮宽度为100% */
  padding: 12px;              /* 内边距 */
  border: none;               /* 去除边框 */
  font-size: 16px;            /* 字体大小 */
  margin-top: 0px;           /* 注册按钮与登录按钮之间的间隔 */
  border-radius: 5px;         /* 圆角按钮 */
}


.login_bin:active {
  background-color: #158c11;  /* 深绿色背景 */
}

.register_bin:active {
  background-color: #2c6ab5;  /* 深蓝色背景 */
}
